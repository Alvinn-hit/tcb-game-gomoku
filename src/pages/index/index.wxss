/* pages/index/index.wxss */
.page-rank-header {
  position: fixed;
  z-index: -1;
  width: 100vw;
  height: 20vh;
  top: 0;
  left: 0;
  background: #ff4d4f;
}

.page-rank-header_btn {
  color: white;
  text-align: center;
  border-radius: 5px;
  padding: 20px 0;
}

.page-rank-main {
  position: relative;
  margin: 0 auto;
  margin-top: calc(40px + 5vh);
  width: 92vw;
  min-height: 100vh;
  border-radius: 5px;
  background: white;
  box-shadow: 0 8px 20px rgba(143,168,191,0.35);
}

.page-rank-main_title, .page-rank-main_item {
  display: flex;
  align-items: center;
  justify-content: space-around;
  line-height: 2;
  padding: 10px 0 10px;
  border-radius: 5px;
}

.page-rank-main_title {
  background: #fff1f0;
  padding: 20px 0 20px;
}

.page-rank-main_item text {
  width: 50%;
  text-align: center;
}

.page-rank-main_item.waiting {
  color: #262626;
}

.page-rank-main_item.fighting {
  background: #f5f5f5;
  color: #bfbfbf;
}